<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="@dimen/background_card_width"
        android:layout_height="@dimen/background_card_height"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_card_background"
        android:gravity="center"
        android:padding="@dimen/background_card_padding">

        <ScrollView
            android:layout_width="@dimen/tv_welcome_width"
            android:layout_height="@dimen/tv_welcome_height">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_shape"
                android:gravity="center"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textColor="@color/black" />

        </ScrollView>


    </LinearLayout>

</RelativeLayout>